<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape >
            <gradient
                android:angle="270"
                android:centerColor="#11243B"
                android:centerY="0.45"
                android:endColor="#11243B"
                android:startColor="#11243B" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip >
            <shape >
                <gradient
                    android:angle="270"
                    android:centerColor="#2C88E2"
                    android:centerY="0.45"
                    android:endColor="#2C88E2"
                    android:startColor="#2C88E2" />
            </shape>
        </clip>
    </item>
</layer-list>